<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/main_margin"
    android:paddingRight="@dimen/main_margin"
    android:paddingTop="6dp" >

    <RelativeLayout
        android:id="@+id/goods_image_rl"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color_gray_c" />

        <TextView
            android:id="@+id/goods_type"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/text_color_gray_a" />

        <RelativeLayout
            android:id="@+id/goods_num_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/num_add_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="bottom"
                android:textColor="@color/text_color_gray_a"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>