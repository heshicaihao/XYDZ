<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/consignee_mark"
            android:layout_alignBottom="@+id/consignee_mark"
            android:layout_toRightOf="@+id/consignee_mark" />

        <TextView
            android:id="@+id/consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/consignee_mark"
            android:layout_alignBottom="@+id/consignee_mark"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/consignee_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/consignee" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shipping_address_mark"
            android:layout_alignBottom="@+id/shipping_address_mark"
            android:layout_toRightOf="@+id/shipping_address_mark" />

        <TextView
            android:id="@+id/shipping_address_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/shipping_address" />
    </RelativeLayout>

</LinearLayout>